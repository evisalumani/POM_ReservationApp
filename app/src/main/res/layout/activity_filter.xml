            <TextView
                android:id="@+id/filter_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/filter_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_type_textview" />

            <TextView
                android:id="@+id/filter_distance_textview"
                android:layout_below="@id/filter_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/filter_distance_min_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/filter_distance_textview"
                android:text="0 km"/>

            <TextView
                android:id="@+id/filter_distance_max_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/filter_distance_textview"
                android:text="100 km"/>

            <SeekBar
                android:id="@+id/filter_distance_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_distance_min_textview"
                android:max="100"/>

            <TextView
                android:id="@+id/filter_price_textview"
                android:layout_below="@id/filter_distance_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE AT MOST"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/filter_price_min_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/filter_price_textview"
                android:text="0 Euro"/>

            <TextView
                android:id="@+id/filter_price_max_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/filter_price_textview"
                android:text="100 Euro"/>

            <SeekBar
                android:id="@+id/filter_price_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_price_min_textview"
                android:max="100"/>

            <TextView
                android:id="@+id/filter_rating_textview"
                android:layout_below="@id/filter_price_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RATING AT LEAST"
                android:textStyle="bold"/>

            <RatingBar
                android:id="@+id/filter_rating_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/filter_rating_textview"
                android:numStars="5"
                android:stepSize="1.0"/>

            <TextView
                android:id="@+id/filter_visitors_textview"
                android:layout_below="@id/filter_rating_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISITORS"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/filter_visitors_spinner"
                android:layout_below="@id/filter_visitors_textview"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/filter_date_textview"
                android:layout_below="@id/filter_visitors_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textStyle="bold"/>

            <CalendarView
                android:id="@+id/filter_calendarview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/filter_date_textview"
                android:layout_alignParentStart="true"/>

            <TimePicker
            android:id="@+id/filter_timepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_calendarview"
            android:layout_alignParentStart="true"
            android:timePickerMode="spinner"/>

            <Button
                android:id="@+id/filter_cancel_button"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom|left"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/filter_filter_button"
                android:layout_alignParentBottom="true"
                android:onClick="cancelFilters"/>



            <Button
                android:id="@+id/filter_filter_button"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom|right"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:onClick="applyFilters"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>