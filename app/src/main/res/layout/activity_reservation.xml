<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/reservation_restaurantName"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:textSize="25dp"
            />

        <LinearLayout
            android:id="@+id/reservation_spinner_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reservation_restaurantName"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/reservation_spinner_description"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Select 1-hour time-slot"
                android:textSize="16dp"
                android:layout_below="@+id/reservation_restaurantName"
                />
            <Spinner
                android:id="@+id/reservation_slot_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_below="@id/reservation_spinner_linearlayout"
            android:layout_height="79dp"
            android:id="@+id/reservation_filteredTables_listview"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05"
            />
    </LinearLayout>
</FrameLayout>